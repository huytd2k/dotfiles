{
    "editor.fontFamily": "Fira Code",
    "workbench.preferredHighContrastColorTheme": "Material Theme Ocean High Contrast",
    "explorer.confirmDragAndDrop": false,
    "editor.linkedEditing": true,
    "editor.fontLigatures": true,
    "vim.foldfix": true,
    "editor.suggestSelection": "first",
    "json.maxItemsComputed": 15000,
    "security.workspace.trust.untrustedFiles": "open",
    "editor.lineNumbers": "relative",
    // Vim easymotion is required for Jump menu - <SPC> j
    "vim.easymotion": true,
    // Use system clipboard for vim
    "vim.useSystemClipboard": true,
    // Trigger the main which key menu with in the active editor with vim
    // This cannot be put into keybindings.json because it will
    // create conflict with Vim.
    // https://github.com/stevenguh/spacecode/issues/3
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": ["<space>"],
            "commands": ["vspacecode.space"]
        },
        {
            "before": [","],
            "commands": [
                "vspacecode.space",
                {
                    "command": "whichkey.triggerKey",
                    "args": "m"
                }
            ]
        }
    ],
    "vim.insertModeKeyBindings": [
        {
            "before": [
                "j",
                "k"
            ],
            "after": [
                "<Esc>"
            ]
        }
    ],
    "vim.visualModeKeyBindingsNonRecursive": [
        {
            "before": ["<space>"],
            "commands": ["vspacecode.space"]
        }
    ],
    "files.autoSave": "afterDelay",
    "terminal.integrated.fontFamily": "FiraCode",
    "editor.minimap.enabled": false,
    "git.autofetch": true,
    "editor.cursorSmoothCaretAnimation": true,
    "editor.smoothScrolling": true,
    "editor.cursorBlinking": "smooth",
    "editor.cursorSurroundingLines": 30, 
    "workbench.list.smoothScrolling": true,
    "workbench.colorTheme": "Material Theme Ocean High Contrast",
    "files.exclude": {
        "**/.classpath": true,
        "**/.project": true,
        "**/.settings": true,
        "**/.factorypath": true
    },
    "editor.fontSize": 17,
    "workbench.colorCustomizations": {
        "[Material Theme Ocean High Contrast]": {}
    },
}